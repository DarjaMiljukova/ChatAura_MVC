<!-- Verify.cshtml -->
@{
    ViewBag.Title = "Verify";
}
<h2>Введите код из SMS</h2>
<form method="post">
    <input type="hidden" name="phoneNumber" value="@ViewBag.PhoneNumber" />
    <input type="text" name="code" placeholder="Код подтверждения" required />
    <button type="submit">Войти</button>
</form>
